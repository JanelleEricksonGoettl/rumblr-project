<div class="card" style="width: auto;">
  <form action="/sign_up" method="post">
    Name:  <br>
    <input class="form-control" type="text" name="first_name" placeholder="First Name">
    <input class="form-control" type="text" name="last_name" placeholder="Last Name"> <br>
    Password:  <br>
    <input class="form-control" type="password" name="password_hash" placeholder="Set Password"> <br>
    Email:  <br>
    <input class="form-control" type="email" name="email" placeholder="Enter Email"> <br>
    Birthday:  <br>
    <input class="form-control" type="date" name="dob" placeholder="Enter Birthday"> <br>
    <input class="btn btn-danger btn-lg btn-block" type="submit" value="Sign Up">
  </form>
</div>